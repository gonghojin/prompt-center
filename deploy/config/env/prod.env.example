# Prompth Center 운영환경 설정 (Template)

# === 애플리케이션 정보 ===
APP_NAME=Prompth Center
APP_VERSION=1.0.0
SPRING_PROFILES_ACTIVE=prod

# === 프론트엔드 설정 ===
FRONTEND_URL=https://your-domain.com
SECURE_COOKIE=true

# === 데이터베이스 설정 ===
DB_NAME=prompth_center
DB_USERNAME=prompth_user
DB_PASSWORD=your_very_secure_production_password_here

# === Redis 설정 ===
REDIS_PASSWORD=your_very_secure_redis_password_here

# === 보안 설정 ===
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_256_bits

# === 외부 서비스 (선택적) ===
# SMTP 설정
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@your-domain.com
# MAIL_PASSWORD=your_app_password

# S3 설정
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=ap-northeast-2
# AWS_BUCKET_NAME=your-bucket-name

# === 로깅 설정 ===
LOG_LEVEL=INFO
